@{
    ViewData["Title"] = "Proxy Providers";
}

<div class="container-fluid">
    <div class="row mt-4">
        <div class="card col-12">
            <div class="card-body">
                <h5 class="card-title">Proxy Test Server List</h5>
                <table id="providerTable" class="table table-striped table-hover" style="width: 100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                        </tr>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{

    <script>
        $(document).ready(function () {
            $('#providerTable').DataTable({
                // Design Assets
                stateSave: true,
                autoWidth: true,
                // ServerSide Setups
                processing: true,
                serverSide: true,
                // Paging Setups
                paging: true,
                // Searching Setups
                searching: { regex: true },
                // Ajax Filter
                ajax: {
                    url: "/api/ProxyTestServer",
                    type: "Get",
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        console.log(d);
                        return JSON.stringify(d);
                    }
                },
                // Columns Setups
                columns: [
                    { data: "name" },
                    { data: "url" }

                ],
                // Column Definitions
                columnDefs: [
                    { targets: "no-sort", orderable: false }
                ]
            });
        });

    </script>
}

