@{
    ViewData["Title"] = "Proxy Providers";
}

<div class="container-fluid">
    <div class="row mt-4">
        <div class="card col-12">
            <div class="card-body">
                <div class="text-center">
                    <h5 class="card-title">Proxy Provider List</h5>
                </div>
                <div class="row mt-2">
                    <button type="button" data-toggle="modal" data-remote="/proxyprovider/insert" data-target="#BaseModal" class="btn btn-primary btn-sm">New Provider</button>
                </div>
                <div class="row mt-2">
                    <table id="providerTable" class="table table-striped table-hover mt-3" style="width: 100%;">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Url
                                </th>
                                <th>Last Fetch Time</th>
                                <th>Count</th>
                                <th>Exception</th>
                                <th>Row Query</th>
                                <th>Ip Query</th>
                                <th>Port Query</th>
                                <th></th>
                            </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/provider.js"></script>
}

