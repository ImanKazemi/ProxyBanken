@model ProxyBanken.DataAccess.Entity.ProxyProvider
@{
    Layout = null;
}

<form method="post" action="/api/proxyproviderapi/insert">
    @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label for="UpdateInterval" class="col-form-label"> @Html.DisplayNameFor(x => x.Url)</label>
            @Html.EditorFor(x => x.Url, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label for="UpdateInterval" class="col-form-label"> @Html.DisplayNameFor(x => x.RowQuery)</label>
            @Html.EditorFor(x => x.RowQuery, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label for="UpdateInterval" class="col-form-label"> @Html.DisplayNameFor(x => x.IpQuery)</label>
            @Html.EditorFor(x => x.IpQuery, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label for="UpdateInterval" class="col-form-label"> @Html.DisplayNameFor(x => x.PortQuery)</label>
            @Html.EditorFor(x => x.PortQuery, new { htmlAttributes = new { @class = "form-control" } })
        </div>

</form>
<script src="~/js/provider.insert.js"></script>